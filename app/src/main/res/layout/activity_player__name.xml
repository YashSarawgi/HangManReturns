<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/bg"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    tools:context="com.rainbowocean.hangmanreturns.Player_Name">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#548235"
        android:textSize="25sp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:gravity="center_horizontal"
        android:text="Choose how you wish to play" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/singleround"
            android:layout_width="0dp"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content"
            android:text="Single Round" />
        <Button
            android:id="@+id/round2"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="4dp"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Double Round" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/definerounds"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:padding="10dp"
            android:layout_margin="2dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Want more rounds" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ask">



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal">

    <EditText
        android:id="@+id/player1"
        android:hint="Player 1"
        android:textColor="#000000"
        android:layout_width="280dp"
        android:layout_margin="4dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/player2"
        android:hint="Player 2"
        android:textColor="#000000"
        android:layout_width="280dp"
        android:layout_margin="4dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/playgame"
        android:layout_margin="8dp"
        android:layout_width="240dp"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_height="wrap_content"
        android:text="Play the Game" />

    </LinearLayout>

</LinearLayout>
